{
  "manifest_version": 2,
  "name": "Selected Text Summary",
  "version": "1.0",
  "description": "Displays a summary of the selected text.",
  "permissions": ["activeTab"],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ]
}
